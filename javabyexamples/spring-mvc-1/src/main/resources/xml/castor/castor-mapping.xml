<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
        "http://castor.org/mapping.dtd">
<mapping>
    <description>Description of the mapping</description>

    <include href="other_mapping_file.xml"/>

    <class name="com.javabyexamples.spring.mvc1.restwithxml.castor.PersonCriteria">
        <map-to xml="criteria"/>

        <field name="name" type="string">
            <bind-xml name="name" node="element"/>
        </field>

        <field name="lastName" type="string">
            <bind-xml name="lastName" node="element"/>
        </field>
    </class>

    <class name="com.javabyexamples.spring.mvc1.restwithxml.castor.PersonDetails">
        <map-to xml="details"/>

        <field name="name" type="string">
            <bind-xml name="name" node="element"/>
        </field>

        <field name="lastName" type="string">
            <bind-xml name="lastName" node="element"/>
        </field>

        <field name="age" type="integer">
            <bind-xml name="age" node="element"/>
        </field>
    </class>
</mapping>