    <script>
        function dangxuat() {
            if (confirm("Bạn muốn đăng xuất thật à :((")) {
                var form = new FormData();
                form.append("logout", "logout");
                var xhr = new XMLHttpRequest();
                xhr.open("post", "/Home/DangXuat", true);
                xhr.onreadystatechange = function () {
                    if (xhr.status == 200 && xhr.readyState == 4) {
                        var json = JSON.parse(xhr.responseText);
                        if (json.Data.status == "OK") {
                            location.reload();
                        }
                        else {
                            location.reload();
                        }
                    }
                }
                xhr.send(form);
            }
        }
        function checkcarts() {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Payment/JSCheckCart", true);
            xhr.onreadystatechange = function () {
                if (xhr.status == 200 && xhr.readyState == 4) {
                    var json = JSON.parse(xhr.responseText);
                    if (json.Data.status == "OK") {
                        location.href = "/Payment/Payment";
                    } else if (json.Data.status=="ERR") {
                        alert("Giỏ hàng của bạn đang rỗng không thể thanh toán");
                    }
                    else {
                        alert("Giỏ hàng có sự thay đổi do hàng hóa vượt quá số lượng!!! Bạn nên kiểm tra lại");
                        location.href = "/Cart/Cart";
                    }
                }
            }
            xhr.send();
        }
    </script>
