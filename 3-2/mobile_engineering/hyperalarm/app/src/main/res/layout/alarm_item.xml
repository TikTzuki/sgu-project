<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="140dp"
                                                   android:background="@color/white"
                                                   android:orientation="horizontal"
                                                   android:paddingHorizontal="8dp">

    <TextView
            android:id="@+id/txtScheduleTime"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="hh/mm"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
            android:id="@+id/txtScheduleTitle"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Title"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtScheduleTime"
            app:layout_constraintLeft_toRightOf="@+id/txtScheduleTime"/>

    <Button
            android:id="@+id/btnDeleteAlarm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/primary"
            android:text="@string/delete"
            android:textColor="@color/black"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtScheduleTime"
            app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
